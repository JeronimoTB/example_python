#Salida = exit("No pudiste seguir el curso del evento")
    
#print(accion_ir)no


boleta = ""

while boleta == "":
    Precio_Localidad = int(input("Que boleta desea comprar?\nVIP = $500\nBoleta Preferencial = $400\nBoleta General = $200\nBoleta Baja = $100\n"))
    if Precio_Localidad == 500:
        print("Has comprado la Boleta VIP")
        boleta = "VIP"
        break
    elif Precio_Localidad ==400:
        print("Has comprado la Boleta Preferencial")
        boleta = "Preferencial"
        break
    elif Precio_Localidad ==200:
        print("Has comprado la Boleta General")
        boleta = "General"
        break
    elif Precio_Localidad ==100:
        print("Has comprado la Boleta Baja")
        boleta = "Baja"
        break
    else:
        print("\nDigitaste un valor invalido, intentalo de nuevo\n")
    




